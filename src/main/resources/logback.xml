<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSSS} [%level] [%thread] [%logger:%line] %msg%n
			</pattern>
		</encoder>
	</appender>
	<logger name="org.springframework" level="INFO" />
	<logger name="com.bridgelabz" level="TRACE" />
	<root>
		<appender-ref ref="STDOUT"/>
	</root>
</configuration>

